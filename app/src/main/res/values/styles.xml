<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WNumberPickerInputText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColorPrimary">#aa0000</item>
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textSize">30sp</item>
    </style>

    <declare-styleable name="OmniViewPager">
        <attr name="slide_paging_enabled" format="boolean" />
    </declare-styleable>

</resources>
