<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--<item android:state_enabled="true" android:color="@color/non_selected"/>-->
    <item android:state_enabled="false" android:color="@color/selected"/>
    <item android:state_window_focused="true" android:color="#22aa22"/>
    <item android:state_window_focused="false" android:color="@color/selected"/>
    <item android:state_pressed="true" android:color="@color/selected"/>
    <item android:state_pressed="false" android:color="#aa00aa"/>
    <item android:state_selected="true" android:color="@color/selected"/>
    <item android:state_selected="false" android:color="#0000aa"/>
    <item android:state_activated="true" android:color="@color/selected"/>
    <item android:state_active="false" android:color="@color/non_selected" />
    <item android:color="@color/selected"/> <!-- not selected -->

</selector>